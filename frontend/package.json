{
  "name": "evaka-frontend",
  "version": "1.0.0",
  "description": "Frontend for eVaka",
  "private": true,
  "license": "LGPL-2.1-or-later",
  "scripts": {
    "clean": "rm -rf dist screenshots videos node_modules/.cache",
    "dev": "concurrently -n tsc,esbuild -c blue,green 'yarn type-check:watch' 'yarn build:serve'",
    "dev:old": "tsc -b . && node dev-server.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --max-warnings 0 .",
    "lint:fix": "yarn lint --fix",
    "type-check": "tsc -b .",
    "type-check:watch": "yarn type-check --watch --preserveWatchOutput",
    "build": "webpack --mode production",
    "build:dev": "node build.js --dev",
    "build:serve": "node build.js --dev --watch --serve",
    "test": "jest src/*-frontend src/lib-*",
    "test:watch": "jest --watchAll src/*-frontend src/lib-*",
    "dev-maintenance-page": "cd src/maintenance-page-frontend && npx http-server",
    "e2e-test": "LANG=fi-FI LANGUAGE=fi_FI jest --testTimeout 60000 --runInBand src/e2e-test/specs",
    "e2e-ci": "LANG=fi-FI LANGUAGE=fi_FI BASE_URL=${BASE_URL:-http://evaka-proxy:8080} jest --testTimeout 60000 --runInBand --bail 1 --retries=2"
  },
  "dependencies": {
    "@evaka/eslint-plugin": "link:eslint-plugin",
    "@fortawesome/fontawesome-svg-core": "1.3.0-beta2",
    "@fortawesome/free-regular-svg-icons": "6.0.0-beta2",
    "@fortawesome/free-solid-svg-icons": "6.0.0-beta2",
    "@fortawesome/react-fontawesome": "0.1.17",
    "@sentry/browser": "^6.17.5",
    "@sentry/react": "^6.17.5",
    "axios": "^0.25.0",
    "babel-plugin-styled-components": "^2.0.2",
    "chart.js": "^3.7.0",
    "chartjs-adapter-date-fns": "^2.0.0",
    "classnames": "^2.3.1",
    "compute-scroll-into-view": "^1.0.17",
    "core-js": "^3.21.0",
    "csstype": "^3.0.10",
    "date-fns": "^2.28.0",
    "downshift": "^6.1.7",
    "history": "^4.10.1",
    "leaflet": "^1.7.1",
    "lib-common": "link:src/lib-common",
    "lib-components": "link:src/lib-components",
    "lib-customizations": "link:src/lib-customizations",
    "lib-icons": "link:src/lib-icons",
    "lodash": "^4.17.21",
    "polished": "^4.1.4",
    "react": "^17.0.2",
    "react-autosize-textarea": "^7.1.0",
    "react-chartjs-2": "^3.3.0",
    "react-csv": "^2.0.3",
    "react-datepicker": "^4.3.0",
    "react-day-picker": "7.4.10",
    "react-dom": "^17.0.2",
    "react-focus-lock": "2.5.2",
    "react-image-crop": "^9.0.4",
    "react-leaflet": "^3.2.5",
    "react-router-dom": "^5.3.0",
    "react-select": "^3.0.8",
    "react-spring": "^8.0.27",
    "react-tooltip": "^4.2.21",
    "seamless-scroll-polyfill": "2.1.6",
    "styled-components": "5.3.3",
    "tslib": "^2.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@playwright/test": "^1.18.1",
    "@sentry/webpack-plugin": "^1.18.5",
    "@types/form-data": "^2.5.0",
    "@types/jest": "^27.4.0",
    "@types/leaflet": "^1.7.9",
    "@types/lodash": "^4.14.178",
    "@types/node": "^15.14.9",
    "@types/react": "^17.0.39",
    "@types/react-csv": "^1.1.2",
    "@types/react-datepicker": "4.1.7",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-select": "3.0.22",
    "@types/styled-components": "^5.1.22",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "babel-loader": "^8.2.3",
    "concurrently": "^6.5.1",
    "css-loader": "^6.6.0",
    "csstype": "^3.0.10",
    "esbuild": "^0.14.20",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "express": "^4.17.2",
    "express-http-proxy": "^1.6.3",
    "fork-ts-checker-webpack-plugin": "^7.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.0",
    "jest-circus": "^27.5.0",
    "jest-environment-node": "^27.5.0",
    "jest-junit": "^13.0.0",
    "make-error-cause": "^2.3.0",
    "playwright": "^1.18.1",
    "postcss": "^8.4.6",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.3.1",
    "prettier": "^2.5.1",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "~4.5.5",
    "webpack": "5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-middleware": "^5.3.1",
    "webpack-pwa-manifest": "^4.3.0",
    "yargs": "^17.3.1"
  },
  "peerDependencies": {
    "@fortawesome/pro-light-svg-icons": "^6.0.0-beta2",
    "@fortawesome/pro-regular-svg-icons": "^6.0.0-beta2",
    "@fortawesome/pro-solid-svg-icons": "^6.0.0-beta2"
  },
  "peerDependenciesMeta": {
    "@fortawesome/pro-light-svg-icons": {
      "optional": true
    },
    "@fortawesome/pro-regular-svg-icons": {
      "optional": true
    },
    "@fortawesome/pro-solid-svg-icons": {
      "optional": true
    }
  },
  "resolutions": {
    "webpack@npm:5.37.1/terser-webpack-plugin": "5.1.1"
  },
  "engines": {
    "node": ">= 16.13.0"
  },
  "browserslist": [
    "Firefox ESR",
    "last 2 Chrome versions",
    "last 2 Android versions",
    "last 2 FirefoxAndroid versions",
    "last 2 ChromeAndroid versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 Edge versions",
    "last 2 Samsung versions",
    "> 5% in FI",
    "last 3 years"
  ],
  "prettier": {
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "projects": [
      "./src/citizen-frontend",
      "./src/e2e-test",
      "./src/employee-frontend",
      "./src/lib-common"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png)$": "<rootDir>/assetsTransformer.js"
    }
  },
  "jest-junit": {
    "outputDirectory": "test-results/",
    "addFileAttribute": "true"
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": true
    }
  },
  "eslintConfig": {
    "ignorePatterns": [
      "/dist"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@evaka/recommended"
    ],
    "plugins": [
      "import",
      "react-hooks"
    ],
    "settings": {
      "import/internal-regex": "^(citizen-frontend|e2e-test|employee-frontend|employee-mobile-frontend|lib-common|lib-components|lib-customizations|lib-icons|maintenance-page-frontend)(/|$)",
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "import/order": [
        "warn",
        {
          "alphabetize": {
            "order": "asc"
          },
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ]
        }
      ],
      "react/jsx-curly-brace-presence": [
        "error",
        "never"
      ],
      "react/prop-types": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": [
        "warn",
        {
          "additionalHooks": "(useApiState)"
        }
      ]
    },
    "overrides": [
      {
        "files": "**/*.{ts,tsx}",
        "extends": [
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": "./tsconfig.eslint.json"
        },
        "plugins": [
          "@typescript-eslint",
          "react-hooks"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@typescript-eslint/member-delimiter-style": [
            "warn",
            {
              "multiline": {
                "delimiter": "none"
              },
              "singleline": {
                "delimiter": "semi",
                "requireLast": false
              }
            }
          ],
          "@typescript-eslint/no-unused-vars": [
            "warn",
            {
              "argsIgnorePattern": "^_",
              "varsIgnorePattern": "^_"
            }
          ],
          "@typescript-eslint/no-floating-promises": "error"
        }
      }
    ]
  }
}
