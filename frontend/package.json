{
  "name": "evaka-frontend",
  "version": "1.0.0",
  "description": "Frontend for eVaka",
  "private": true,
  "license": "LGPL-2.1-or-later",
  "scripts": {
    "clean": "rm -rf dist/ && rm -rf node_modules/.cache",
    "dev": "node dev-server.js",
    "lint": "eslint --ext .ts,.tsx src",
    "lint-strict": "eslint --ext .ts,.tsx --max-warnings 0 src",
    "lint:fix": "yarn lint --fix",
    "type-check": "tsc -b .",
    "build": "webpack --mode production",
    "build:dev": "webpack",
    "storybook": "start-storybook -p 9001 -c src/lib-components/.storybook",
    "build-storybook": "build-storybook -c src/lib-components/.storybook -o storybook-build",
    "test": "jest src/*-frontend src/lib-*",
    "test:watch": "jest --watchAll src/*-frontend src/lib-*",
    "build-maintenance-page": "parcel build src/maintenance-page/index.html --public-url ./ --out-dir dist/maintenance-page",
    "dev-maintenance-page": "parcel src/maintenance-page/index.html",
    "e2e": "testcafe 'chrome --start-fullscreen' src/e2e-test/**/*.spec.ts",
    "e2e-headless": "testcafe 'chrome:headless' src/e2e-test/**/*.spec.ts",
    "e2e-ff": "testcafe 'firefox:headless:emulation:width=1920;height=1080 --start-fullscreen' src/e2e-test/**/*.spec.ts --page-load-timeout 60000 --assertion-timeout 20000 --selector-timeout 20000 -S -s screenshots",
    "e2e-accessibility": "testcafe 'chrome --start-fullscreen' src/e2e-test/**/*.spec.ts --fixture-meta subType=accessibility",
    "e2e-citizen": "testcafe 'chrome --start-fullscreen' src/e2e-test/specs/0_citizen/*.spec.ts",
    "e2e-invoicing": "testcafe 'chrome --start-fullscreen' src/e2e-test/specs/4_invoicing/*.spec.ts",
    "e2e-employee": "testcafe 'chrome --start-fullscreen' src/e2e-test/specs/5_employee/*.spec.ts",
    "e2e-employee-2": "testcafe 'chrome --start-fullscreen' src/e2e-test/specs/2_employee-2/*.spec.ts",
    "e2e-mobile": "testcafe 'chrome --start-fullscreen' src/e2e-test/specs/6_mobile/*.spec.ts",
    "e2e-messaging": "testcafe 'chrome --start-fullscreen' src/e2e-test/specs/7_messaging/*.spec.ts",
    "e2e-playwright": "jest --runInBand src/e2e-playwright/specs",
    "e2e-ci": "BASE_URL=http://localhost:9999 testcafe 'chrome:headless:emulation:width=1920;height=1080' src/e2e-test/**/*.spec.ts -s takeOnFails=true --stop-on-first-fail",
    "e2e-ci-accessibility": "BASE_URL=http://localhost:9999 testcafe 'chrome:headless:emulation:width=1920;height=1080' src/e2e-test/**/*.spec.ts --fixture-meta subType=accessibility -s takeOnFails=true --stop-on-first-fail",
    "e2e-ci-citizen": "BASE_URL=http://localhost:9999 testcafe 'chrome:headless:emulation:width=1920;height=1080' src/e2e-test/specs/0_citizen/*.spec.ts -s takeOnFails=true --stop-on-first-fail",
    "e2e-ci-invoicing": "BASE_URL=http://localhost:9999 testcafe 'chrome:headless:emulation:width=1920;height=1080' src/e2e-test/specs/4_invoicing/*.spec.ts -s takeOnFails=true --stop-on-first-fail",
    "e2e-ci-employee": "BASE_URL=http://localhost:9999 testcafe 'chrome:headless:emulation:width=1920;height=1080' src/e2e-test/specs/5_employee/*.spec.ts -s takeOnFails=true --stop-on-first-fail",
    "e2e-ci-employee-2": "BASE_URL=http://localhost:9999 testcafe 'chrome:headless:emulation:width=1920;height=1080' src/e2e-test/specs/2_employee-2/*.spec.ts -s takeOnFails=true --stop-on-first-fail",
    "e2e-ci-mobile": "BASE_URL=http://localhost:9999 testcafe 'chrome:headless:emulation:width=375;height=667' src/e2e-test/specs/6_mobile/*.spec.ts -s takeOnFails=true --stop-on-first-fail",
    "e2e-ci-messaging": "BASE_URL=http://localhost:9999 testcafe 'chrome:headless:emulation:width=1920;height=1080' src/e2e-test/specs/7_messaging/*.spec.ts -s takeOnFails=true --stop-on-first-fail",
    "e2e-ci-playwright": "BASE_URL=http://localhost:9999 jest src/e2e-playwright/specs --runInBand --bail 1"
  },
  "dependencies": {
    "@evaka/eslint-plugin": "link:eslint-plugin",
    "@fortawesome/fontawesome-svg-core": "1.2.30",
    "@fortawesome/free-regular-svg-icons": "5.14.0",
    "@fortawesome/free-solid-svg-icons": "5.14.0",
    "@fortawesome/react-fontawesome": "0.1.11",
    "@sentry/browser": "^6.4.1",
    "axios": "^0.21.1",
    "chart.js": "^2.9.4",
    "chartjs-adapter-date-fns": "^1.0.0",
    "citizen-frontend": "link:src/citizen-frontend",
    "classnames": "^2.3.1",
    "compute-scroll-into-view": "^1.0.17",
    "core-js": "^3.12.1",
    "csstype": "^3.0.8",
    "date-fns": "^2.21.3",
    "downshift": "^6.1.3",
    "e2e-test-common": "link:src/e2e-test-common",
    "employee-frontend": "link:src/employee-frontend",
    "focus-trap-react": "^8.5.0",
    "history": "^4.10.1",
    "leaflet": "^1.7.1",
    "leaflet.markercluster": "^1.5.0",
    "lib-common": "link:src/lib-common",
    "lib-components": "link:src/lib-components",
    "lib-customizations": "link:src/lib-customizations",
    "lib-icons": "link:src/lib-icons",
    "lodash": "^4.17.21",
    "polished": "^4.1.2",
    "react": "^17.0.2",
    "react-autosize-textarea": "^7.1.0",
    "react-chartjs-2": "^2.11.1",
    "react-csv": "^2.0.3",
    "react-datepicker": "^2.10.1",
    "react-day-picker": "7.4.10",
    "react-dom": "^17.0.2",
    "react-focus-lock": "2.5.1",
    "react-leaflet": "^3.2.0",
    "react-leaflet-markercluster": "^3.0.0-rc1",
    "react-meta-tags": "1.0.1",
    "react-router-dom": "^5.2.0",
    "react-select": "^3.0.8",
    "react-spring": "^8.0.27",
    "react-tooltip": "^4.2.19",
    "seamless-scroll-polyfill": "1.2.3",
    "styled-components": "5.3.0",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@sentry/webpack-plugin": "^1.15.1",
    "@storybook/addon-actions": "^6.1.21",
    "@storybook/react": "^6.1.21",
    "@types/jest": "^26.0.23",
    "@types/leaflet": "^1.7.0",
    "@types/lodash": "^4.14.169",
    "@types/node": "^14.17.0",
    "@types/react": "^17.0.6",
    "@types/react-csv": "^1.1.1",
    "@types/react-datepicker": "2.11.0",
    "@types/react-dom": "^17.0.5",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-select": "3.0.22",
    "@types/react-tooltip": "^4.2.4",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "babel-loader": "^8.2.2",
    "bulma": "0.7.5",
    "css-loader": "^5.2.4",
    "csstype": "^3.0.8",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.2",
    "fork-ts-checker-webpack-plugin": "^6.2.10",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^27.0.1",
    "jest-circus": "^27.0.1",
    "jest-environment-node": "^27.0.1",
    "jest-junit": "^12.1.0",
    "make-error-cause": "^2.3.0",
    "parcel-bundler": "^1.12.5",
    "playwright": "^1.11.0",
    "postcss-loader": "^5.3.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.13",
    "style-loader": "^2.0.0",
    "testcafe": "~1.13.0",
    "testcafe-reporter-junit": "3.0.2",
    "ts-jest": "^27.0.0",
    "ts-loader": "^9.2.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.2.4",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-middleware": "^4.3.0",
    "webpack-pwa-manifest": "^4.3.0"
  },
  "peerDependencies": {
    "@fortawesome/pro-light-svg-icons": "^5.14.0",
    "@fortawesome/pro-regular-svg-icons": "^5.14.0",
    "@fortawesome/pro-solid-svg-icons": "^5.14.0"
  },
  "peerDependenciesMeta": {
    "@fortawesome/pro-light-svg-icons": {
      "optional": true
    },
    "@fortawesome/pro-regular-svg-icons": {
      "optional": true
    },
    "@fortawesome/pro-solid-svg-icons": {
      "optional": true
    }
  },
  "engines": {
    "node": ">= 14.15.0"
  },
  "browserslist": [
    "Firefox ESR",
    "last 2 Chrome versions",
    "last 2 Android versions",
    "last 2 FirefoxAndroid versions",
    "last 2 ChromeAndroid versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 Edge versions",
    "last 2 Samsung versions",
    "> 5% in FI",
    "last 3 years"
  ],
  "prettier": {
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "projects": [
      "./src/citizen-frontend",
      "./src/e2e-playwright",
      "./src/employee-frontend",
      "./src/lib-common"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png)$": "<rootDir>/assetsTransformer.js"
    }
  },
  "jest-junit": {
    "outputDirectory": "test-results/"
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": true
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:prettier/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@evaka/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/member-delimiter-style": [
        "warn",
        {
          "multiline": {
            "delimiter": "none"
          },
          "singleline": {
            "delimiter": "semi",
            "requireLast": false
          }
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-floating-promises": "error",
      "react/prop-types": 0,
      "react-hooks/rules-of-hooks": "error"
    }
  }
}
